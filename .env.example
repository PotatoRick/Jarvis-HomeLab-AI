# Database password (generate a secure one)
POSTGRES_PASSWORD=your-secure-database-password

# Claude API key from console.anthropic.com
ANTHROPIC_API_KEY=sk-ant-xxx

# Claude model (optional, defaults to claude-sonnet-4-5-20250929)
CLAUDE_MODEL=claude-sonnet-4-5-20250929

# Your primary monitored host
SSH_NEXUS_HOST=192.168.1.10
SSH_NEXUS_USER=admin

# Additional hosts (optional)
# SSH_HOMEASSISTANT_HOST=192.168.1.11
# SSH_HOMEASSISTANT_USER=root
# SSH_OUTPOST_HOST=your-vps-ip
# SSH_OUTPOST_USER=admin

# Discord notifications (optional)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...
DISCORD_ENABLED=true

# Webhook auth for Alertmanager
WEBHOOK_AUTH_USERNAME=alertmanager
WEBHOOK_AUTH_PASSWORD=your-webhook-password

# Logging level
LOG_LEVEL=INFO
